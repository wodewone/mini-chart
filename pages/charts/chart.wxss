.toolbar {
    width: 100%;
    height: 40px;
    line-height: 40px;
    padding: 0 10px;
}

.chart {
    flex: 1;
    width: 100%;
    position: relative;
}

.f2-chart {
    width: 100%;
    height: 100%;
}

.chart-loading {
    top: 0;
    left: 0;
    z-index: 10;
    width: 100%;
    height: 100%;
    display: flex;
    position: absolute;
    align-content: center;
    justify-content: center;
    background: rgba(167, 167, 167, 0.28);
}

.select {
    display: inline;
    position: relative;
    padding-right: 15px;
}

.select::after {
    content: '';
    right: 0;
    top: 50%;
    position: absolute;
    transform: translateY(-30%);
    border: 4px solid transparent;
    border-top-color: #999;
}